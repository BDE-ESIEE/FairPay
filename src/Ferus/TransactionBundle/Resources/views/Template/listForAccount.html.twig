<table class="table table-striped table-hover">
    <tr>
        <th>Type</th>
        <th>Interlocuteur</th>
        <th>Objet</th>
        <th>Montant</th>
        <th>Date</th>
        <th>Mandataire</th>
    </tr>
    {% for transaction in transactions %}
        <tr>
            <td>
                {% if transaction.type == 'Transaction' %}
                    {{ label_success(icon('transfer') ~ ' Transaction') }}
                {% elseif transaction.type == 'Dépot' %}
                    {{ label_primary(icon('import') ~ ' Dépot') }}
                {% else %}
                    {{ label_warning(icon('export') ~ ' Retrait') }}
                {% endif %}
            </td>
            <td>
                {% if transaction.issuer is not null and transaction.issuer.id != account.id %}
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('account_admin_view', {id:transaction.issuer.id}) }}">
                            {{ transaction.issuer }}
                        </a>
                    {% else %}
                        {{ transaction.issuer }}
                    {% endif %}
                {% endif %}

                {% if transaction.receiver is not null and transaction.receiver.id != account.id %}
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('account_admin_view', {id:transaction.receiver.id}) }}">
                            {{ transaction.receiver }}
                        </a>
                    {% else %}
                        {{ transaction.receiver }}
                    {% endif %}
                {% endif %}
            </td>
            <td>{{ transaction.cause }}</td>
            <td>
                {% if transaction.issuer is not null and transaction.issuer.id == account.id %}
                    <span class="text-danger">€ -{{ transaction.amount }}</span>
                {% else %}
                    <span class="text-success">€ +{{ transaction.amount }}</span>
                {% endif %}
            </td>
            <td>{{ transaction.completedAt|date('d/m/Y à H:i') }}</td>
            <td>{{ transaction.representative }}</td>
        </tr>
    {% endfor %}
</table>