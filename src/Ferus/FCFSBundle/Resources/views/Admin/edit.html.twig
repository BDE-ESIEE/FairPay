{% extends '@FerusFCFS/Admin/layout.html.twig' %}

{% block breadcrumb %}
    {{ parent() }}
    <li>{{ event }}</li>
    <li class="active">Editer</li>
{% endblock %}

{% block content %}
    <h2>Editer {{ event }}</h2>
    {{ form_start(form, { 'style': 'horizontal' }) }}

        <fieldset>
            <legend>Informations</legend>
            {{ form_row(form.name) }}
            {{ form_row(form.date) }}
            {{ form_row(form.registrationDate) }}
            {{ form_row(form.maxPeople) }}
        </fieldset>
        {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/form/collection.js') }}"></script>
{% endblock %}