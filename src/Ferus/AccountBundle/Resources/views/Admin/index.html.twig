{% extends '@FerusAccount/Admin/layout.html.twig' %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">Tous les comptes</li>
{% endblock %}

{% block content %}
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <tr>
                <th>{{ icon('barcode') }}</th>
                <th>Nom</th>
                <th>Solde</th>
                <th></th>
            </tr>
            {% for account in accounts %}
                <tr>
                    <td><code>{{ account.owner.barcode }}</code></td>
                    <td>
                        <a href="{{ path('account_admin_view', {id:account.id}) }}">
                            {{ account.owner }}
                        </a>
                    </td>
                    <td>€ {{ account.balance }}</td>
                    <td>
                        <div class="btn-group btn-group-xs" style="min-width: 47px">
                            <a href="{{ path('account_admin_view', {id:account.id}) }}" class="btn btn-default">
                                {{ icon('zoom-in') }} <span class="visible-sm-inline visible-md-inline visible-lg-inline">Détails</span>
                            </a>
                            <a type="button" class="btn btn-default" href="{{ path('account_admin_remove', {id:account.id}) }}">
                                {{ icon('remove') }}
                            </a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
    {{ knp_pagination_render(accounts) }}
{% endblock %}