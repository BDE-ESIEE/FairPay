{% extends '@FerusStudent/Admin/layout.html.twig' %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">Statistiques</li>
{% endblock %}

{% block content %}
    <h1>Statistiques</h1>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">

            <div class="panel panel-default">
                <table class="table table-striped table-bordered">
                    <tr>
                        <th>Nom</th>
                        <th>Cotisants</th>
                        <th>Non-cotisants</th>
                        <th>Total</th>
                        <th>Pourcentage</th>
                    </tr>
                    {% for stat in classes %}
                        <tr>
                            <td>E{{ stat.class }}</td>
                            <td>{{ stat.contributors }}</td>
                            <td>{{ stat.total - stat.contributors }}</td>
                            <td>{{ stat.total }}</td>
                            <td>{{ (stat.contributors / stat.total * 100)|round }}%</td>
                        </tr>
                    {% endfor %}
                    <tr>
                        <td colspan="5" class="active"></td>
                    </tr>
                    {% for stat in stats %}
                        <tr>
                            <td>{{ stat.class }}</td>
                            <td>{{ stat.contributors }}</td>
                            <td>{{ stat.total - stat.contributors }}</td>
                            <td>{{ stat.total }}</td>
                            <td>{{ (stat.contributors / stat.total * 100)|round }}%</td>
                        </tr>
                    {% endfor %}
                    <tr>
                        <td colspan="5" class="active"></td>
                    </tr>
                    <tr>
                        <td>Total</td>
                        <td>{{ total.contributors }}</td>
                        <td>{{ total.total - total.contributors }}</td>
                        <td>{{ total.total }}</td>
                        <td>{{ (total.contributors / total.total * 100)|round }}%</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6">
        <div id="total" style="min-width: 250px; height: 200px; margin: 0 auto"></div>
    </div>
    <div class="clearfix"></div>
    <h2>Par année</h2>
    {% for stat in classes %}
        <div class="col-md-3 col-sm-6">
            <div id="class-{{ stat.class }}" style="min-width: 250px; height: 200px; margin: 0 auto"></div>
        </div>
    {% endfor %}
    <div class="clearfix"></div>
    <h2>Par promo</h2>
    <div class="row">
        {% for stat in stats %}
            <div class="col-md-3 col-sm-6">
                <div id="chart-{{ stat.class }}" style="min-width: 250px; height: 200px; margin: 0 auto"></div>
            </div>
        {% endfor %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="//code.highcharts.com/highcharts.js"></script>
    <script type="text/javascript">
        $(function () {
            Highcharts.setOptions({
                lang: {
                    decimalPoint: ',',
                    thousandsSep: ' ',
                    loading: 'Chargement...',
                    resetZoom: 'Réinitialiser le zoom',
                    resetZoomTitle: 'Réinitialiser le zoom à 1:1'
                }
            });
            $('#total').highcharts({
                chart: {
                    plotBackgroundColor: null,
                    plotBorderWidth: 0,
                    plotShadow: false,
                    marginTop: -100
                },
                title: {
                    text: 'Total',
                    align: 'center',
                    verticalAlign: 'bottom',
                    y: -70
                },
                credits:{
                    enabled: false
                },
                tooltip: {
                    pointFormat: '{series.name} : <b>{point.percentage:.1f}%</b><br>Total : <b>{point.y}</b>'
                },
                plotOptions: {
                    pie: {
                        dataLabels: {
                            enabled: false
                        },
                        startAngle: -90,
                        endAngle: 90,
                        center: ['50%', '100%'],
                        showInLegend: true,
                        colors: ['#5CB85C', '#D9534F']
                    }
                },
                series: [{
                    type: 'pie',
                    name: 'Répartition',
                    innerSize: '50%',
                    data: [
                        ['Cotisants',     {{ total.contributors }}],
                        ['Non-cotisants', {{ total.total - total.contributors }}]
                    ]
                }]
            });
            {% for stat in classes %}
            $('#class-{{ stat.class }}').highcharts({
                chart: {
                    plotBackgroundColor: null,
                    plotBorderWidth: 0,
                    plotShadow: false,
                    marginTop: -100
                },
                title: {
                    text: 'E{{ stat.class }}',
                    align: 'center',
                    verticalAlign: 'bottom',
                    y: -70
                },
                credits:{
                    enabled: false
                },
                tooltip: {
                    pointFormat: '{series.name} : <b>{point.percentage:.1f}%</b><br>Total : <b>{point.y}</b>'
                },
                plotOptions: {
                    pie: {
                        dataLabels: {
                            enabled: false
                        },
                        startAngle: -90,
                        endAngle: 90,
                        center: ['50%', '100%'],
                        showInLegend: true,
                        colors: ['#5CB85C', '#D9534F']
                    }
                },
                series: [{
                    type: 'pie',
                    name: 'Répartition',
                    innerSize: '50%',
                    data: [
                        ['Cotisants',   {{ stat.contributors }}],
                        ['Non-cotisants',       {{ stat.total - stat.contributors }}]
                    ]
                }]
            });
            {% endfor %}
            {% for stat in stats %}
            $('#chart-{{ stat.class }}').highcharts({
                chart: {
                    plotBackgroundColor: null,
                    plotBorderWidth: 0,
                    plotShadow: false,
                    marginTop: -100
                },
                title: {
                    text: '{{ stat.class }}',
                    align: 'center',
                    verticalAlign: 'bottom',
                    y: -70
                },
                credits:{
                    enabled: false
                },
                tooltip: {
                    pointFormat: '{series.name} : <b>{point.percentage:.1f}%</b><br>Total : <b>{point.y}</b>'
                },
                plotOptions: {
                    pie: {
                        dataLabels: {
                            enabled: false
                        },
                        startAngle: -90,
                        endAngle: 90,
                        center: ['50%', '100%'],
                        showInLegend: true,
                        colors: ['#5CB85C', '#D9534F']
                    }
                },
                series: [{
                    type: 'pie',
                    name: 'Répartition',
                    innerSize: '50%',
                    data: [
                        ['Cotisants',   {{ stat.contributors }}],
                        ['Non-cotisants',       {{ stat.total - stat.contributors }}]
                    ]
                }]
            });
            {% endfor %}
        });
    </script>
{% endblock %}