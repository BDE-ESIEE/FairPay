{% extends '@FerusEvent/Admin/layout.html.twig' %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">Tous les évenements</li>
{% endblock %}

{% block content %}
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Date</th>
                <th>Outils</th>
                <th></th>
            </tr>
            {% for event in events %}
                <tr>
                    <td>{{ event.id }}</td>
                    <td>
                        <a href="{{ path('event_admin_participants', {id:event.id}) }}">
                            {{ event }}
                        </a>
                    </td>
                    <td>
                        {{ event.date|date('d/m/Y') }}
                    </td>
                    <td>
                        <div class="btn-group btn-group-xs hidden-xs">
                            <a class="btn btn-primary" href="{{ path('event_store_index', {id:event.id}) }}">
                                {{ icon('shopping-cart') }} Boutique en ligne
                            </a>
                            <a class="btn btn-default" href="{{ path('event_admin_participants', {id:event.id}) }}">
                                {{ icon('th-list') }} Participants
                            </a>
                            <a class="btn btn-default" href="{{ path('event_admin_car_requests', {id:event.id}) }}">
                                <i class="fa fa-car"></i> Demandes
                            </a>
                            <a class="btn btn-success" href="{{ path('event_admin_money', {id:event.id}) }}">
                                {{ icon('euro') }} Trézo
                            </a>
                        </div>
                        <div class="btn-group btn-group-xs visible-xs-block" style="min-width: 138px">
                            <a class="btn btn-primary" href="{{ path('event_store_index', {id:event.id}) }}">
                                {{ icon('shopping-cart') }}
                            </a>
                            <a class="btn btn-default" href="{{ path('event_admin_participants', {id:event.id}) }}">
                                {{ icon('th-list') }}
                            </a>
                            <a class="btn btn-default" href="{{ path('event_admin_car_requests', {id:event.id}) }}">
                                <i class="fa fa-car"></i>
                            </a>
                            <a class="btn btn-success" href="{{ path('event_admin_money', {id:event.id}) }}">
                                {{ icon('euro') }}
                            </a>
                        </div>
                    </td>
                    <td>
                        <div class="btn-group btn-group-xs" style="min-width: 47px">
                            <a href="{{ path('event_admin_edit', {id:event.id}) }}" class="btn btn-default">
                                {{ icon('pencil') }} <span class="visible-sm-inline visible-md-inline visible-lg-inline">Editer</span>
                            </a>
                            <a type="button" class="btn btn-default" href="{{ path('event_admin_remove', {id:event.id}) }}">
                                {{ icon('remove') }}
                            </a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
    {{ knp_pagination_render(events) }}
{% endblock %}