<div class="list-group-item product" data-toggle="collapse" data-target="#product-{{ product.id }}">
    <div class="badge" data-price>{{ product.price|number_format(2, '.', ' ') }} â‚¬</div>
    <span data-name>{{ product }}</span>
    <div id="product-{{ product.id }}" class="collapse">
        <form class="input-group hidden-xs form" style="width: 100%; margin-top: 10px" data-edit="{{ path('seller_edit_product', {id:product.id}) }}">
            <input type="text" name="name" class="form-control" style="width: 50%" value="{{ product.name }}" placeholder="Nom">
            <input type="text" name="price" class="form-control" data-type="money" style="width: 50%" value="{{ product.price|number_format(2, '.', ' ') }}" placeholder="Prix">
            <div class="input-group-btn">
                <button class="btn btn-default" type="submit">{{ icon('ok') }}</button>
                <button class="btn btn-danger" data-remove-product="{{ path('seller_remove_product', {id:product.id}) }}" type="button">
                    {{ icon('remove') }}
                </button>
            </div>
        </form>
        <div class="visible-xs-block">
            <form class="form" data-edit="{{ path('seller_edit_product', {id:product.id}) }}">
                <input type="text" style="margin-top: 10px" name="name" class="form-control" value="{{ product.name }}" placeholder="Nom">
                <input type="text" style="margin-top: 10px" name="price" class="form-control" data-type="money" value="{{ product.price|number_format(2, '.', ' ') }}" placeholder="Prix">

                <div class="btn-group btn-group-justified" style="margin-top: 10px">
                    <button class="btn btn-default" style="width: 50%">{{ icon('ok') }} Editer
                    </button>
                    <button class="btn btn-danger" data-remove-product="{{ path('seller_remove_product', {id:product.id}) }}" style="width: 50%">
                        {{ icon('remove') }} Supprimer
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>