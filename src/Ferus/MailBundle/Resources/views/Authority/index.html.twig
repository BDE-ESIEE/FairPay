{% extends '@FerusMail/Authority/layout.html.twig' %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">Liste</li>
{% endblock %}

{% block content %}

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Messages d'autorisation</th>
                <th>Messages de refus</th>
                <th></th>
            </tr>
            {% for authority in authorities %}
                <tr>
                    <td>{{ authority.id }}</td>
                    <td>{{ authority }}</td>
                    <td>{{ authority.email }}</td>
                    <td>
                        {% for message in authority.okMessage %}
                            {{ label_success(message) }}
                        {% endfor %}
                    </td>
                    <td>
                        {% for message in authority.noMessage %}
                            {{ label_danger(message) }}
                        {% endfor %}
                    </td>
                    <td>
                        <div class="btn-group btn-group-xs">
                            <a class="btn btn-default" href="{{ path('authority_admin_edit', {id:authority.id}) }}">
                                {{ icon('pencil') }} Editer
                            </a>
                            <a class="btn btn-default" href="{{ path('authority_admin_remove', {id:authority.id}) }}">
                                {{ icon('remove') }}
                            </a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}