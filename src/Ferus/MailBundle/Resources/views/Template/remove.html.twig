{% extends '@FerusMail/Template/layout.html.twig' %}

{% block breadcrumb %}
    {{ parent() }}
    <li>{{ template }}</li>
    <li class="active">Supprimer</li>
{% endblock %}

{% block content %}
    <div class="alert alert-warning" role="alert">
        <h2>Attention !</h2>
        <p>Vous êtes sur le point de supprimer définitivement le template <b>{{ template }}</b>. Voulez vous continuer ?</p>
        <form method="post" style="margin-top: 10px">
            <button type="submit" class="btn btn-danger">
                {{ icon('remove') }} Supprimer {{ template }}
            </button>
            <a class="btn btn-primary" href="{{ path('template_admin_index') }}">
                Annuler
            </a>
        </form>
    </div>
{% endblock %}
