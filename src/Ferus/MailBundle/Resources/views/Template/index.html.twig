{% extends '@FerusMail/Template/layout.html.twig' %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">Liste</li>
{% endblock %}

{% block content %}

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th></th>
            </tr>
            {% for template in templates %}
                <tr>
                    <td>{{ template.id }}</td>
                    <td>{{ template.name }}</td>
                    <td>
                        <div class="btn-group btn-group-xs">
                            <a class="btn btn-default" href="{{ path('template_admin_edit', {id:template.id}) }}">
                                {{ icon('pencil') }} Editer
                            </a>
                            <a class="btn btn-default" href="{{ path('template_admin_remove', {id:template.id}) }}">
                                {{ icon('remove') }}
                            </a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}